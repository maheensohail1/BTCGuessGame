{
  "compilerOptions": {
    "target": "ES6",           // Set the JavaScript version
    "module": "commonjs",      // Use CommonJS modules
    "outDir": "./dist",        // Output folder for compiled files
    "rootDir": "./src",        // The source directory for your TypeScript files
    "esModuleInterop": true,   // Allows for default import of non-ES modules
    "skipLibCheck": true       // Optional: speeds up compilation
  },
  "include": ["src/**/*"],     // The source files you want to compile
  "exclude": ["node_modules"]  // Exclude node_modules folder
}